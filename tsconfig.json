{
	"compilerOptions": {
		"module": "NodeNext",
		"target": "es2024",
		"moduleResolution": "NodeNext",
		"jsx": "preserve",
		"strictFunctionTypes": true,
		"sourceMap": true,
		"forceConsistentCasingInFileNames": true,
		"importHelpers": true,
		"removeComments": true,
		"esModuleInterop": true,
		"strict": true,
		"types": ["node"]
	},

	"exclude": ["node_modules", "**/node_modules/*"]
}
